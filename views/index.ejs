<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlogSpot</title>
</head>
<body>
    <%- include("partials/header") %>
    <%if(locals.posts.length==0){%>
       <p class="center">No posts yet</p>
   <%  } %>
   <div class="post-links">
    <strong>Posts:</strong><br>
    <ul style="padding-left: 12px;">
    <% posts.forEach(post => { %>
      <li><a href="#<%= post.id %>"><%= post.title %></a></li>
    <% }) %>
    </ul>
   </div>
   <% posts.forEach(post=>{%>
        <div class="post-card">
            <h2><%=post.title%></h2>
            <small><%=post.date%></small>
            <p style="white-space: pre-wrap;"><%=post.content%></p>
            <div class="btn">
            <form action="/delete/<%=post.id%>" method="post" onsubmit="return confirm('Are you sure you want to delete this post?');">
                <button type="submit" >Delete</button>
            </form>
            <form action="/edit/<%= post.id %>" method="get" style="display:inline;">
                <button type="submit">Edit</button>
            </form>
            </div>
        </div>
    <%})%>

    <%- include("partials/footer") %>
</body>
</html>